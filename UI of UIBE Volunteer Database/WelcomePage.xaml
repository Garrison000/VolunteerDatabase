<Window x:Class="VolunteerDatabase.Desktop.WelcomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        mc:Ignorable="d"
        Width="300" Height="400"
        d:DesignHeight="300" d:DesignWidth="400" ResizeMode="NoResize">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Canvas MinWidth="200">
                <TextBlock Text="Welcome" HorizontalAlignment="Left" Height="30" Width="90" FontSize="20" />
                <mui:ModernTab Layout="Tab" Width="auto" Height="auto" Canvas.Top="70" Canvas.Left="78">
                    <mui:ModernTab.Links>
                        <mui:Link DisplayName="登录">
                            <mui:Link.Source>
                                Pages/Login.xaml
                            </mui:Link.Source>
                        </mui:Link>
                        <mui:Link DisplayName="注册">
                            <mui:Link.Source>
                                Pages/Register.xaml
                            </mui:Link.Source>
                        </mui:Link>
                    </mui:ModernTab.Links>
                </mui:ModernTab>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>