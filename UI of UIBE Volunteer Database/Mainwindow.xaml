<Window x:Class="WpfApplication1.Mainwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="机构用户" Height="auto" Width="auto" d:DesignWidth="1366" d:DesignHeight="768">
    <TabPanel>
        <Viewbox Stretch="Fill">
            <TabControl x:Name="Main_Tabcontrol" Height="273" Width="496">
                <TabItem Header="项目管理">
                    <Grid Height="240" Width="490">
                        <Label Content="项目状态" FontSize="12" Margin="351,0,87,224"></Label>
                        <ComboBox FontSize="12" Margin="408,0,10,224">
                            <ComboBoxItem>已完成项目</ComboBoxItem>
                            <ComboBoxItem>进行中项目</ComboBoxItem>
                        </ComboBox>
                        <DataGrid Margin="0,21,10,10" AutoGenerateColumns="True" x:Name="project_list"
                                  ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="LightBlue" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="LightGray"/>
                                            <Setter Property="Foreground" Value="Green"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="新建项目">
                    <Grid Height="244">
                        <TextBlock Text="项目名称" Height="23" Width="72" Margin="-188,-79,188,85" />
                        <TextBox x:Name="project_name" Margin="-116,-58,93,106" Height="23" Width="100"/>
                        <TextBlock Text="项目地点" Height="23" Width="72" Margin="-188,-49,188,55"/>
                        <TextBox x:Name="project_place" Margin="-116,-28,93,76" Height="23" Width="100"/>
                        <TextBlock Text="项目时间" Height="23" Width="72" Margin="31,-58,-21,106"/>
                        <DatePicker x:Name="project_time" Height="23" Margin="291,-61,96,110"/>
                        <TextBlock Text="最大人数" Height="23" Width="72" Margin="31,-30,-21,78"/>
                        <TextBox x:Name="max" Height="23" Margin="291,-27,96,76"/>
                        <TextBlock Text="项目详情" Height="23" Width="72" Margin="19,10,395,39"/>
                        <RichTextBox Margin="88,96,96,43"></RichTextBox>
                        <Button x:Name="create_project_button" Content="创建项目" Click="create_project_button_Click" Height="23" Width="72" Margin="404,211,10,10"/>
                    </Grid>
                </TabItem>
             
                <TabItem Header="用户信息">
                    <Grid Height="238" Width="482">
                        <Label x:Name="label" Content="用户名" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <Label x:Name="label1" Content="开通时间" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem Header="用户审批" IsEnabled="False"></TabItem>
                <TabItem Header="志愿者信息" IsEnabled="False"></TabItem>
            </TabControl>
        </Viewbox>
    </TabPanel>
</Window>
