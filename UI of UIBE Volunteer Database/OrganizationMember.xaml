<Window x:Class="WpfApplication1.OrganizationMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="机构成员" Height="auto" Width="auto" d:DesignWidth="1366" d:DesignHeight="768">
    <TabPanel>
        <Viewbox>
            <TabControl x:Name="Main_Tabcontrol" Width="400" Height="220">
                <TabItem Header="志愿项目管理">
                    <DataGrid Height="162" Width="400" ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <DataGridCheckBoxColumn Binding="{Binding Selected, NotifyOnSourceUpdated=True,UpdateSourceTrigger=PropertyChanged}">
                        </DataGridCheckBoxColumn>
                    </DataGrid>
                </TabItem>
                <TabItem Header="志愿者信息查询"></TabItem>
                <TabItem Header="用户管理"></TabItem>
                <TabItem Header="备用按键设计" AccessKeyManager.AccessKeyPressed="TabItem_AccessKeyPressed" IsEnabled="False"/>
                

            </TabControl>
            </Viewbox>
    </TabPanel>
</Window>
