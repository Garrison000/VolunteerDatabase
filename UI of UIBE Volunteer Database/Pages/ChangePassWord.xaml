<UserControl x:Class="VolunteerDatabase.Desktop.Pages.ChangePassWord"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VolunteerDatabase.Desktop.Pages"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="216.226" d:DesignWidth="300">
    <Grid Margin="0,0,0,62">
        <Canvas Height="239" VerticalAlignment="Top" Margin="0,-28,0,-32">
            <TextBlock Text="原密码" Canvas.Left="42" Canvas.Top="77"/>
            <TextBlock Text="新密码" Canvas.Top="127" Canvas.Left="42"/>
            <mui:ModernButton x:Name="confirmBtn" IconData="{StaticResource Confirm}" Canvas.Left="106" Canvas.Top="189" Click="confirmBtn_Click" />
            <mui:ModernButton x:Name="cancelBtn" IconData="{StaticResource Cancel}" Canvas.Left="201" Canvas.Top="189"/>
            <PasswordBox x:Name="originPasswordBox" Height="25" Canvas.Left="99" Canvas.Top="73" Width="155"/>
            <PasswordBox x:Name="newPasswordBox" Height="25" Canvas.Left="99" Canvas.Top="123" Width="155"/>
            <Label x:Name="informingMessage" Foreground="Red" Canvas.Left="99"  Content="" Canvas.Top="163"/>
        </Canvas>

    </Grid>
</UserControl>
